<Window x:Class="WorkHorse.TrelloAuthDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TrelloAuthDialog" Height="300" Width="300"
        ResizeMode="NoResize"
        Topmost="True"
        SizeToContent="Height">
    <StackPanel>
        <TextBlock TextWrapping="Wrap">Please click <Hyperlink Name="TwitterAuthUrl">here</Hyperlink> to visit Twitter and authorise the app. Please paste the key in the following box.</TextBlock>
        <TextBox Name="TwitterAuthText"></TextBox>
        <StackPanel Orientation="Horizontal">
            <Button Name="OkButton" IsDefault="True">OK</Button>
            <Button Name="CancelButton" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
